<UserControl x:Class="DrawChart.ChartCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DrawChart"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="625" d:DesignWidth="1000">
    <Grid>
        <lvc:CartesianChart Series="{Binding _seriesCollection}" LegendLocation="Right" DisableAnimations="True">
            <lvc:CartesianChart.AxisY>
                <!--<lvc:Axis Title="V" Name="xAxis" LabelFormatter="{Binding _YFormatter}"></lvc:Axis>-->
                <lvc:Axis Title="V" Name="yAxis"></lvc:Axis>
            </lvc:CartesianChart.AxisY>
            <lvc:CartesianChart.AxisX>
                <!--<lvc:Axis Title="Bit" Name="yAxis" LabelFormatter="{Binding _XFormatter}" Labels="{Binding _Labels}"></lvc:Axis>-->
                <lvc:Axis Title="Bit" Name="xAxis" 
                          MinValue="{Binding _chartZooming.Start, Mode=TwoWay}" 
                          MaxValue="{Binding _chartZooming.End ,Mode=TwoWay}" ></lvc:Axis>
            </lvc:CartesianChart.AxisX>
        </lvc:CartesianChart>
    </Grid>
</UserControl>
