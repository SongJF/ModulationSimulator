<UserControl x:Class="ModulationSimulator.Pages.Exp_AM"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModulationSimulator.Pages"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:Chart="clr-namespace:ChartCanvas;assembly=ChartCanvas"
             mc:Ignorable="d" 
             d:DesignHeight="625" d:DesignWidth="1200">
    <Grid>
        <DockPanel>
            <materialDesign:Card
                DockPanel.Dock="Right" 
                VerticalAlignment="Stretch"
                MinWidth="250">
                <Expander
                    Header="可选参数"
                    VerticalAlignment="Stretch"
                    IsExpanded="True">
                    <StackPanel>
                        <Button Margin="5">应用</Button>
                    </StackPanel>
                </Expander>
            </materialDesign:Card>
            <!--图表边框-->
            <Chart:Chart_AM/>
        </DockPanel>
    </Grid>
</UserControl>
