<UserControl x:Class="ModulationSimulator.Pages.Exp_AM"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModulationSimulator.Pages"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             xmlns:DrawChart="clr-namespace:DrawChart;assembly=DrawChart"
             d:DesignHeight="625" d:DesignWidth="1200">
    <Grid>
        <DockPanel>
            <materialDesign:Card
                Width="250"
                VerticalAlignment="Stretch"
                DockPanel.Dock="Right">
                <StackPanel>
                    <TextBlock Style="{StaticResource MaterialDesignHeadlineTextBlock}" HorizontalAlignment="Center" Margin=" 0 10 0 0">
                        频率调制
                    </TextBlock>
                    <GroupBox
                        Header="可选参数"
                        Margin="16">
                        <TextBox x:Name="TextBox_Frequency" 
                         materialDesign:HintAssist.Hint="频率" 
                         materialDesign:HintAssist.IsFloating="True">
                        </TextBox>
                    </GroupBox>
                    
                </StackPanel>
                
            </materialDesign:Card>
            
            <!--图表边框-->
            <Grid>
                <DrawChart:Canvas Margin="10"/>
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>
